<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>BLUR</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="assets/css/bootstrap.min.css">
        <link rel="stylesheet" href="assets/css/style.css">

    </head>

    <body>
        <nav class="navbar navbar-dark bg-dark">
            <a href="shop" class="navbar-brand mx-auto">BLUR SHOP</a>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse container" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" href="products">PRODUCTS</a>
                    <a class="nav-item nav-link active" href="buy">BUY</a>
                    <a class="nav-item nav-link" href="#">HELP</a>
                    <a class="nav-item nav-link" href="#">ABOUT US</a>
                    <a class="nav-item nav-link" href="#">PROFILE</a>
                </div>
            </div>
        </nav>
        <div class="container p-4">
            <div class="row">
                <% for(var i = 0; i < shop.length; i++) { %>
                    <div class="col-md-4 mt-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <a href="#" class="card-title text-uppercase">
                                    <tr>
                                        <h4><%= shop[i].nombreP%></h4>
                                    </tr>
                                </a>
                                <p>$ <%= shop[i].precioP%></p>
                                <td>
                                    <a href="/info/<%= shop[i].idProductos %>" class="btn btn-info">BUY</a>
                                </td>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </body>

    <footer class="page-footer">
        <div class="page-footer-fontent fixed-width clearfix">
            <small class="copyright">All Content Copyright - BLUR. All Rights Reserved</small>
            <small class="credits">Site Designed by <a href="#">BLUR TEAM</a></small>
        </div>
    </footer>
</html>